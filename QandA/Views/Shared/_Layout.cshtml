<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QandA_lesson1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            background-color: #F7F8FA;
        }

        .navigation {
            position: fixed;
            box-sizing: border-box;
            top: 0;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #fff;
            border-bottom: 1px solid #E3E2E2;
            box-shadow: 0 3px 7px 0 rgba(110, 112, 114, 0.21);
        }

        .nav-item {
            color: #000000;
        }

            .nav-item:hover {
                color: #000;
                text-decoration: none;
            }

        .search {
            box-sizing: border-box;
            font-family: 'Segoe UI', 'Helvetica Neue',sans-serif;
            font-size: 16px;
            padding: 8px 10px;
            border: 1px solid #E3E2E2;
            border-radius: 3px;
            color: #5C5A5A;
            background-color: white;
            width: 200px;
            height: 30px;
        }

        .btn-signin {
            font-family: 'Segoe UI','Helvetica Neue',sans-serif;
            font-size: 16px;
            padding: 5px 10px;
            background-color: transparent;
            color: #5C5A5A;
            webkit-text-decoration: none;

            text-decoration: none;
            cursor: pointer;
        }

        .text {
            border: none;
            padding: 0px;
            padding-top: 25px;
            padding-left: 310px;
        }

        .contener {
            width: 80%;
            margin: auto;
        }

        .box {
            background-color: #F7F8FA;
            border-top: 5px rgba(245, 192, 17, 0.836) solid;
            color: #5C5A5A;
            background-color: white;
            padding-top: 0px;
            padding-left: 20px;
            padding-right: 20px;
        }

        .h2 {
            font-size: 15px;
            font-weight: bold;
            margin: 10px 0px 5px;
            text-align: center;
            text-transform: uppercase;
        }

        .primary-button {
            background-color: #824c67;
            border-color: #824c67;
            border-style: solid;
            border-radius: 5px;
            font-size: 16px;
            padding: 5px 10px;
            color: white;
            cursor: pointer;
        }

            .primary-button:hover {
                text-decoration: none;
                background-color: #681C41;
                color: #fff;
            }

        .header {
            padding: 20px 0px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .form-ask {
            padding: 20px 15px;
            background-color: rgb(163, 159, 159);
            background-color: rgb(240, 240, 240);
            border-radius: 10px;
            border-color: #ccc;
            border-width: 1px;
            border-style: solid;
            box-shadow: 2px 2px 2px #888888;
            min-width: 300px;
        }

        .line {
            border-top: 1px solid #ccc;
            background-color: white;
            margin: 20px 0px;
        }

        .form-ask input, .form-ask textarea {
            border-radius: 3px;
            border: 1px solid #ccc;
            width: 100%;
        }

        .form-ask label {
            margin-bottom: 0px;
        }

        .primary-button {
            background-color: #824c67;
            border-color: #824c67;
            border-style: solid;
            border-radius: 5px;
            font-size: 16px;
            padding: 5px 10px;
            color: white;
            cursor: pointer;
        }
    </style>

    @RenderSection("Header", false)
</head>
<body>

    <div class="navigation">
        <div>
            <a class="nav-item" asp-controller="Home" asp-action="Index">
                <b>Q & A</b>
            </a>
        </div>
        <input class="search" type="text" placeholder="Search" />
        <a asp-controller="Account" asp-action="SignOut" class="btn-signin nav-item"> <i class="fas fa-user-secret"></i> Sign out (@User.Identity.Name)</a>
    </div>
    <div>
        <br>
        <br>

    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>